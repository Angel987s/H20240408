@model IEnumerable<PersonaH>

@{
    ViewData["Title"] = "Índice";
}

<h1 class="display-4">Lista de Personas</h1>

<div class="container">
    <form asp-action="Index" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Nombre</label>
                    <input type="text" name="NombreH" class="form-control" />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Apellido</label>
                    <input type="text" name="ApellidoH" class="form-control" />
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Estatus</label>
                    <select name="EstatusH" class="form-control">
                        <option value="0">Seleccionar</option>
                        <option value="1">Activo</option>
                        <option value="2">Inactivo</option>
                    </select>
                </div>
            </div>
            <div class="col-md-1">
                <div class="form-group">
                    <label class="control-label">Cantidad Reg.</label>
                    <select name="Take" class="form-control">
                        <option value="2">2</option>
                        <option selected value="10">10</option>
                        <option value="20">20</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <input type="submit" value="Buscar" class="btn btn-primary" />

                <a class="btn btn-primary" asp-action="Create">Crear</a>
            </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nombre</th>
                <th scope="col">Apellido</th>
                <th scope="col">Fecha de Nacimiento</th>
                <th scope="col">Sueldo</th>
                <th scope="col">Estatus</th>
                <th scope="col">Comentario</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreH)</td>
                    <td>@Html.DisplayFor(modelItem => item.ApellidoH)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaNacimientoH)</td>
                    <td>@Html.DisplayFor(modelItem => item.SueldoH)</td>
                    <td>@if (item.EstatusH == 1)
                        {
                            <span class="badge badge-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge badge-danger">Inactivo</span>
                        }</td>
                    <td>@Html.DisplayFor(modelItem => item.ComentarioH)</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
                        <a class="btn btn-secondary btn-sm" href="@Url.Action("Details", new { Id = item.Id })">Detalles</a>
                        <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { Id = item.Id })">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

