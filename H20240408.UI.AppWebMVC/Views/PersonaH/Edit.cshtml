@model PersonaH

@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-4 mb-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title">Editar Persona</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input asp-for="Id" type="hidden" class="form-control" />
                <input asp-for="Take" type="hidden" class="form-control" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="NombreH" class="form-label">Nombre</label>
                            <input asp-for="NombreH" class="form-control" />
                            <span asp-validation-for="NombreH" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ApellidoH" class="form-label">Apellido</label>
                            <input asp-for="ApellidoH" class="form-control" />
                            <span asp-validation-for="ApellidoH" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaNacimientoH" class="form-label">Fecha de Nacimiento</label>
                            <input asp-for="FechaNacimientoH" class="form-control" />
                            <span asp-validation-for="FechaNacimientoH" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="SueldoH" class="form-label">Sueldo</label>
                            <input asp-for="SueldoH" class="form-control" />
                            <span asp-validation-for="SueldoH" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="EstatusH" class="form-label">Estatus</label>
                            <select asp-for="EstatusH" class="form-select">
                                <option value="1">Activo</option>
                                <option value="2">Inactivo</option>
                            </select>
                            <span asp-validation-for="EstatusH" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ComentarioH" class="form-label">Comentario</label>
                            <textarea asp-for="ComentarioH" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="ComentarioH" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="container text-center mt-4">
    <a asp-action="Index">Regresar a la Lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
