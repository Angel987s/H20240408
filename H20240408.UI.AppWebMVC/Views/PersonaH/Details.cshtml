@model PersonaH

@{
    ViewData["Title"] = "Detalles";
}

<div class="container mt-4 mb-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h5 class="card-title">Detalles de Persona</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.NombreH)</dd>
                <dt class="col-sm-3">Apellido</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ApellidoH)</dd>
                <dt class="col-sm-3">Fecha de Nacimiento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaNacimientoH)</dd>
                <dt class="col-sm-3">Sueldo</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.SueldoH)</dd>
                <dt class="col-sm-3">Estatus</dt>
                <dd class="col-sm-9">
                    @if (Model.EstatusH == 1)
                    {
                        <span class="badge bg-success">Activo</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Inactivo</span>
                    }
                </dd>
                <dt class="col-sm-3">Comentario</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ComentarioH)</dd>
            </dl>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="row">
        <div class="col-sm-6 text-center">
            <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
        </div>
        <div class="col-sm-6 text-center">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>
